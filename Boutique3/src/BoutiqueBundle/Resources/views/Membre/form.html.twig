{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="mb-4" >{{ title }}</h1>
    <div class="row">
        <div class="col-4 ">
            {# Méthode très simple qui génère le formulaire entierment #}
            {# {{ form(membreForm) }} #}
        </div>
    </div>
    
    <div class="row">
        <div class="col-4 ">
            {# Méthode pour génèrer nous même les champs du formulaire #}
            {{ form_start(membreForm) }}
            
            {# On pourrait vouloir récupérer toutes les erreurs du formulaire en haut : #}
            {{ form_errors(membreForm) }}

                <div class="form-group">
                    {# {{ form_row(membreForm.pseudo) }} #}
                     {{ form_widget(membreForm.pseudo, { 'attr' : {class : 'form-control', 'placeholder' : 'Saisissez votre pseudo'} }) }}
                    {{ form_errors(membreForm.pseudo) }}
                </div>
           
                <div class="form-group">
                    {# <label>
                        {{ form_label(membreForm.prenom) }}
                    </label> #}
                      {{ form_widget(membreForm.prenom, { 'attr' : {class : 'form-control', 'placeholder' : 'Saisissez votre prenom'} }) }}
                    {{ form_errors(membreForm.prenom) }}
                </div>
              
                <div class="form-group">                    
                    {{ form_widget(membreForm.nom, { 'attr' : {class : 'form-control', 'placeholder' : 'Saisissez votre nom'} }) }}
                    {{ form_errors(membreForm.nom) }}
                </div>
                
                <div class="form-group">                    
                    {{ form_widget(membreForm.mdp, { 'attr' : {class : 'form-control', 'placeholder' : 'Saisissez votre Mot de passe'} }) }}
                    {{ form_errors(membreForm.mdp) }}
                </div>
               
                <div class="form-group">                    
                    {{ form_widget(membreForm.email, { 'attr' : {class : 'form-control', 'placeholder' : 'Saisissez votre email'} }) }}
                    {{ form_errors(membreForm.email) }}
                </div>
               
                <div class="form-group">                    
                    {{ form_widget(membreForm.civilite, { 'attr' : {class : 'form-control'} }) }}
                    {{ form_errors(membreForm.civilite) }}
                </div>

               
                <div class="form-group">                    
                    {{ form_widget(membreForm.ville, { 'attr' : {class : 'form-control', 'placeholder' : 'Saisissez votre ville'} }) }}
                    {{ form_errors(membreForm.ville) }}
                </div>
               
                <div class="form-group">                    
                    {{ form_widget(membreForm.codePostal, { 'attr' : {class : 'form-control', 'placeholder' : 'Saisissez votre codePostal'} }) }}
                    {{ form_errors(membreForm.codePostal) }}
                </div>
               
                <div class="form-group">                    
                    {{ form_widget(membreForm.adresse, { 'attr' : {class : 'form-control', 'placeholder' : 'Saisissez votre adresse'} }) }}
                    {{ form_errors(membreForm.adresse) }}
                </div>




            {{form_rest(membreForm)}}
            {# form_rest est tres  important car génère le jeton CSRF et gère la sécurité #}
            {{ form_end(membreForm) }}
        </div>
    </div>
    

{% endblock %}