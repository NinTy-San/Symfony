{% extends 'layout.html.twig' %}


{% block title %}
   {{title}}
{% endblock %}
{% block content %}
    <h1 class="mt-5"> {{ title }} </h1>
    <div class="row">
        <div class="col-4">
            {% for message in app.session.flashBag.get('success') %}
                <span class="alert alert-success"> {{ message }} </span><br>
            {% endfor %}
            {% for message in app.session.flashBag.get('error') %}
                <span class="alert alert-danger"> {{ message }} </span><br>
            {% endfor %}
        <div>
    <div>


    <div class="row mt-5">
        
        <div class="col-12">
			<p class="alert alert-info">Nombre de commandes dans la boutique :  {{ commandes | length }} </p><br>
        <div>
        
    </div>

    <div class="row ">
        <div class="col-12">
            <table class="table table-hover table-dark w-100 text-center w-100">     
                <tr class=" text-white">
                    <th>Id commande</th>
                    <th>Id membre</th>
                    <th>Montant</th>
                    <th>Date d'enregistrement</th>
                    <th>Etat</th>
                    <th>Action</th>

                    {# {% for champ in champs %}
                        <th> {{ champs }} </th>
                    {% endfor %} #}

                </tr>

                {% for commande in commandes %}
                <tr>
                        {# {% for produit in produits %}
                            {% for key, valeur in produit %}
                                <td> {{produit.valeur}} </td>
                            {% endfor %}
                        {% endfor %} #}
                    
                        <td> {{commande.idCommande}} </td>
                        <td> {{commande.idMembre}} </td>
                        <td> {{commande.montant}} </td>
                        <td> {{commande.date_enregistrement}} </td>
                        <td> {{commande.etat}} </td>
                        <td><a href="{{ path('delete_produit', {'id' : commande.idCommande})}}"><i class="text-danger fas fa-trash-alt"></i></a></td>
                </tr>
                {% endfor %}
            </table>

        <div>
    </div>
{% endblock %}	