{% extends 'layout.html.twig' %}


{% block title %}
   {{title}}
{% endblock %}
{% block content %}
    <h1 class="mt-5"> {{ title }} </h1>
    <div class="row">
        <div class="col-4">
            {% for message in app.session.flashBag.get('success') %}
                <span class="alert alert-success"> {{ message }} </span><br>
            {% endfor %}
            {% for message in app.session.flashBag.get('error') %}
                <span class="alert alert-danger"> {{ message }} </span><br>
            {% endfor %}
        <div>
    <div>


    <div class="row mt-5">
        
        <div class="col-12">
			<p class="alert alert-info">Nombre de membres dans la boutique :  {{ membres | length }} </p><br>
        <div>
        
    </div>

    <div class="row ">
        <div class="col-12">
            <table class="table table-hover table-dark w-100 text-center">     
                <tr class=" text-white">
                
                    <th>Id membre</th>
                    <th>Pseudo</th>
                    <th>Mot de passe</th>
                    <th colspan="3">Nom - Prénom</th>
                    <th>Email</th>
                    <th>Civilité</th>
                    <th>Ville</th>
                    <th>Code postal</th>
                    <th>Adresse</th>
                   

                </tr>

                {% for membre in membres %}
                <tr>
                        {# {% for produit in membres %}
                            {% for key, valeur in produit %}
                                <td> {{produit.valeur}} </td>
                            {% endfor %}
                        {% endfor %} #}
                        <td> {{membre.idMembre}} </td>
                        <td> {{membre.pseudo}} </td>
                        <td> {{membre.mdp}} </td>
                        <td> {{membre.nom}} </td>
                        <td> {{membre.prenom}} </td>
                        <td> {{membre.email}} </td>
                        <td> {{membre.civilite}} </td>
                        <td> {{membre.ville}} </td>
                        <td> {{membre.codePostal}} </td>
                        <td> {{membre.adresse}} </td>
         

                        {# <td><a target="_blank" href="{{ path('produit', {'id' : pdt.idProduit})}}"><i class="text-info fas fa-eye"></i></a></td>
                       <td><a href=""><i class="text-warning fas fa-edit"></i></a></td>
                        <td><a href="{{ path('delete_produit', {'id' : pdt.idProduit})}}"><i class="text-danger fas fa-trash-alt"></i></a></td> #}
                </tr>
                {% endfor %}
            </table>

        <div>
    </div>
{% endblock %}	